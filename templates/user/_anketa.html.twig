{% if is_user_form %}
    {% if user.isSmoking is not null %}
        {% if user.isSmoking %}
            <span class="badge badge-danger" title="Курит"><i class="fas fa-smoking"></i></span>
        {% else %}
            <span class="badge badge-light" title="Не курит"><i class="fas fa-smoking-ban"></i></span>
        {% endif %}
    {% endif %}

    {% if user.isAlcohol is not null %}
        {% if user.isAlcohol %}
            <span class="badge badge-danger" title="Потребяет алкоголь"><i class="fas fa-wine-bottle"></i></span>
        {% else %}
            <span class="badge badge-light" title="Не потребяет алкоголь"><i class="fas fa-wine-bottle"></i></span>
        {% endif %}
    {% endif %}

    {% if user.isMeatConsumption is not null %}
        {% if user.isMeatConsumption %}
            <span class="badge badge-danger" title="Потребяет мясо"><i class="fas fa-drumstick-bite"></i></span>
        {% else %}
            <span class="badge badge-light" title="Не потребяет мясо"><i class="fas fa-drumstick-bite"></i></span>
        {% endif %}
    {% endif %}
{% endif %}
